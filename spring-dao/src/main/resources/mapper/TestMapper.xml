<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.self.dao.mapper.TestMapper">

    <resultMap id="BaseResultMap" type="com.self.dao.entity.Test">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="value" column="value" jdbcType="VARCHAR"/>
            <result property="isDeleted" column="is_deleted" jdbcType="BOOLEAN"/>
            <result property="createUser" column="create_user" jdbcType="BIGINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateUser" column="update_user" jdbcType="BIGINT"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,value,
        is_deleted,create_user,create_time,
        update_user,update_time
    </sql>

    <select id="selectAllByNameTestList" resultType="com.self.dao.entity.Test">
        select
            <include refid="Base_Column_List" />
        from test t

        <where>
            and t.enable = 1

            <if test="condition.name != null and condition.name != ''">
                and t.name = #{condition.name}
            </if>
        </where>

        order by t.id asc
    </select>

</mapper>
