<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.self.dao.mapper.TestMapper">

    <resultMap id="BaseResultMap" type="com.self.dao.entity.Test">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="value" column="value" jdbcType="VARCHAR"/>
            <result property="enable" column="enable" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,value,
        enable
    </sql>

    <select id="selectAllByNameTestList" resultType="com.self.dao.entity.Test">
        select
            <include refid="Base_Column_List" />
        from test t

        <where>
            and t.enable = 1

            <if test="condition.name != null and condition.name != ''">
                and t.name = #{condition.name}
            </if>
        </where>

        order by t.id asc
    </select>

</mapper>
